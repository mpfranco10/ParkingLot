<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="#FFFFFF"
    android:fontFamily="sans-serif-medium"
    tools:context=".ui.dashboard.DashboardFragment"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textView"
        android:layout_width="352dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/title_search"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="265dp">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="352dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Ej: A87D6"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/bSearch"
        android:layout_width="352dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_send_black_24dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="@string/boton_enviar"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/bScan"
        android:layout_width="352dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="@string/boton_escanear"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bSearch"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/textViewActual"
        android:layout_width="352dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="292dp"
        android:fontFamily="sans-serif-medium"
        android:text="Parqueadero"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bScan" />

    <Button
        android:id="@+id/buttonActual"
        android:layout_width="352dp"
        android:layout_height="70dp"
        android:layout_marginTop="34dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="Ver mi estado de parqueo"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewActual"
        app:layout_constraintVertical_bias="0.04" />

</androidx.constraintlayout.widget.ConstraintLayout>